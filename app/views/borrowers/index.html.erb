<h1>Borrowers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Current Loans</th>
      <th>Total Books Borrowed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @borrowers.each do |borrower| %>
      <tr>
        <td><%= borrower.name %></td>
        <td><%= borrower.email %></td>
        <td><%= borrower.current_loans.count %></td>
        <td><%= borrower.loans.count %></td>
        <td>
          <%= link_to 'View History', borrower_path(borrower), class: 'btn btn-info btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= link_to 'Back to Books', books_path, class: 'btn btn-secondary' %>
</div>